{
  // Workspace colors - True Material Green 900 (Very Dark)
  // Helps differentiate this container build project
  "workbench.colorCustomizations": {
    // Activity bar - Material Green 900 (#1b5e20 is actually 800, 900 is darker)
    "activityBar.background": "#0d2810",
    "activityBar.foreground": "#a5d6a7",
    "activityBar.inactiveForeground": "#4a7c59aa",
    "activityBarBadge.background": "#051005",
    "activityBarBadge.foreground": "#a5d6a7",
    
    // Title bar - matching dark green
    "titleBar.activeBackground": "#0d2810",
    "titleBar.activeForeground": "#a5d6a7",
    "titleBar.inactiveBackground": "#0d281099",
    "titleBar.inactiveForeground": "#a5d6a799",
    
    // Status bar - slightly lighter but still very dark
    "statusBar.background": "#1a3d1a",
    "statusBar.foreground": "#a5d6a7",
    "statusBarItem.hoverBackground": "#245024",
    
    // Sidebar - near black with green tint
    "sideBar.background": "#0a1f0a",
    "sideBar.foreground": "#e0e0e0",
    "sideBarTitle.foreground": "#a5d6a7",
    "sideBarSectionHeader.background": "#0d281033",
    
    // Tabs - very dark green
    "tab.activeBackground": "#0d281033",
    "tab.activeBorder": "#2e5f30",
    "tab.activeForeground": "#a5d6a7",
    "tab.inactiveBackground": "#051005",
    "editorGroupHeader.tabsBackground": "#030703",
    
    // Terminal - near black with light text
    "terminal.background": "#030703",
    "terminal.foreground": "#e0e0e0",
    
    // Lists and selections
    "list.activeSelectionBackground": "#1a3d1a",
    "list.activeSelectionForeground": "#a5d6a7",
    "list.hoverBackground": "#0d281044",
    
    // Editor highlights
    "editor.selectionBackground": "#1a3d1aaa",
    "editor.lineHighlightBackground": "#0d281022"
  },

    // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.ruff": "explicit"
  },

  // cSpell settings - use external configuration file
  "cSpell.useGitignore": true,
  "cSpell.import": ["./cspell.json"]
}
