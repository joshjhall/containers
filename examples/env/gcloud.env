# Google Cloud SDK Feature Environment Variables

# Build Arguments
# ===============

# Enable Google Cloud SDK installation
INCLUDE_GCLOUD=false

# Runtime Environment Variables
# =============================

# GCloud configuration
CLOUDSDK_PYTHON=/usr/bin/python3
CLOUDSDK_CORE_DISABLE_PROMPTS=1
CLOUDSDK_METRICS_ENVIRONMENT=container

# Default project and region
CLOUDSDK_CORE_PROJECT=
CLOUDSDK_COMPUTE_REGION=us-central1
CLOUDSDK_COMPUTE_ZONE=us-central1-a

# GCloud paths
CLOUDSDK_CONFIG=$HOME/.config/gcloud
GOOGLE_APPLICATION_CREDENTIALS=

# Component configuration
CLOUDSDK_COMPONENT_MANAGER_DISABLE_UPDATE_CHECK=1

# Output preferences
CLOUDSDK_CORE_DISABLE_COLOR=0
CLOUDSDK_CORE_CONSOLE_LOG_FORMAT=text
