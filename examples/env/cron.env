# Cron Feature Environment Variables

# Build Arguments
# ===============

# Enable cron daemon installation
# Note: Auto-enabled when INCLUDE_RUST_DEV=true or INCLUDE_DEV_TOOLS=true
INCLUDE_CRON=false

# Enable passwordless sudo (required for cron daemon to auto-start)
# Without this, you must manually run: sudo service cron start
ENABLE_PASSWORDLESS_SUDO=true

# Runtime Environment Variables
# =============================

# Cron logging level (0 = minimal, higher = more verbose)
# Only affects crond daemon logging, not individual job output
CRON_LOG_LEVEL=0
