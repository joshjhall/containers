# Terraform Feature Environment Variables

# Build Arguments
# ===============

# Enable Terraform installation
INCLUDE_TERRAFORM=false

# Runtime Environment Variables
# =============================

# Terraform configuration
TF_LOG=
TF_LOG_PATH=
TF_INPUT=false
TF_CLI_ARGS=-no-color

# Terraform behavior
TF_IN_AUTOMATION=true
TF_REGISTRY_DISCOVERY_RETRY=5
TF_REGISTRY_CLIENT_TIMEOUT=15

# Terraform workspace
TF_WORKSPACE=default

# Provider credentials (examples)
TF_VAR_aws_region=us-east-1
TF_VAR_project_name=

# Terragrunt configuration
TERRAGRUNT_DOWNLOAD_DIR=$HOME/.terragrunt-cache
TERRAGRUNT_SOURCE_UPDATE=false
TERRAGRUNT_FETCH_DEPENDENCY_OUTPUT_FROM_STATE=true