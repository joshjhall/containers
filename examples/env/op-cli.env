# 1Password CLI Feature Environment Variables

# Build Arguments
# ===============

# Enable 1Password CLI installation
INCLUDE_OP=false

# Runtime Environment Variables
# =============================

# 1Password configuration
OP_ACCOUNT=
OP_SESSION=
OP_VAULT=
OP_DEVICE=

# 1Password behavior
OP_BIOMETRIC_UNLOCK_ENABLED=false
OP_CACHE_TIMEOUT=300
OP_FORMAT=json

# 1Password paths
OP_CONFIG_DIR=$HOME/.config/op
OP_DATA_DIR=$HOME/.local/share/op
OP_LOG_FILE=/tmp/op.log

# Security options
OP_DEBUG=false
OP_TRACE=false

# Integration settings
OP_MANAGED_VARIABLES=  # Comma-separated list of env vars managed by 1Password

# MCP Token Auto-Loading (for Claude Code integration)
# ====================================================
# Automatically load GITHUB_TOKEN and GITLAB_TOKEN from 1Password
# on shell initialization and container startup.
#
# Service account token (required for auto-loading)
# Create at: https://developer.1password.com/docs/service-accounts/
OP_SERVICE_ACCOUNT_TOKEN=

# 1Password reference for GitHub personal access token
# Format: op://vault-name/item-name/field-name
OP_GITHUB_TOKEN_REF=

# 1Password reference for GitLab personal access token
# Format: op://vault-name/item-name/field-name
OP_GITLAB_TOKEN_REF=
