# Python Development Tools Feature Environment Variables

# Build Arguments
# ===============

# Enable Python installation (prerequisite)
INCLUDE_PYTHON=true

# Enable Python development tools (linters, formatters, docs, etc.)
INCLUDE_PYTHON_DEV=false

# Runtime Environment Variables
# =============================

# Poetry configuration
POETRY_VIRTUALENVS_IN_PROJECT=true
POETRY_NO_INTERACTION=1
POETRY_VIRTUALENVS_CREATE=true
POETRY_VIRTUALENVS_PATH=$HOME/.cache/pypoetry/virtualenvs

# Python environment
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# pip configuration
PIP_NO_CACHE_DIR=1
PIP_DISABLE_PIP_VERSION_CHECK=1
PIP_DEFAULT_TIMEOUT=100