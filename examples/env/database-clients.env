# Database Clients Feature Environment Variables

# Build Arguments
# ===============

# Enable database clients
INCLUDE_POSTGRES_CLIENT=false
INCLUDE_REDIS_CLIENT=false
INCLUDE_SQLITE_CLIENT=false

# Runtime Environment Variables
# =============================

# PostgreSQL client
PGHOST=localhost
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=
PGSSLMODE=prefer
PGCONNECT_TIMEOUT=10

# Redis client
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# SQLite
SQLITE_TMPDIR=/tmp
SQLITE_TRACE=