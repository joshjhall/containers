package main

import (
    "flag"
    "fmt"
    "os"
)

var version = "dev"

func main() {
    var showVersion bool
    flag.BoolVar(&showVersion, "version", false, "Show version")
    flag.Parse()

    if showVersion {
        fmt.Printf("%s version %s\n", os.Args[0], version)
        os.Exit(0)
    }

    fmt.Println("Hello from CLI!")
}
