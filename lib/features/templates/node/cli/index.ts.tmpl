#!/usr/bin/env node
import { Command } from 'commander';
import chalk from 'chalk';

const program = new Command();

program
  .name('__PROJECT_NAME__')
  .description('CLI tool description')
  .version('0.1.0');

program
  .command('hello <name>')
  .description('Say hello')
  .action((name: string) => {
    console.log(chalk.green(`Hello, ${name}!`));
  });

program.parse();
